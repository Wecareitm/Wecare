<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AreaselectionActivity"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#dcdcdc">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Search Area"
        android:textSize="15sp"
        android:paddingLeft="16dp"
        android:textColor="@android:color/black"
        android:background="@drawable/edittext_search_bg"
        android:drawableLeft="@drawable/ic_action_search"
        android:drawablePadding="10dp"
        android:layout_margin="8dp"
        />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:text="Detect my location"
        android:textSize="16sp"
        android:padding="8dp"
        android:textColor="#0000ff"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/ic_action_location"
        android:drawablePadding="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTHER AREAS"
        android:textSize="16sp"
        android:textColor="#3c3c3c"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        />

    <ListView
        android:id="@+id/lv_areas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        />





</LinearLayout>